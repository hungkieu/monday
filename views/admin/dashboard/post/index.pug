extend ../../../layouts/dashboard.pug
block style
  link(rel="stylesheet", href="/public/css/typeahead.css")
  link(rel="stylesheet", href="https://cdn.quilljs.com/1.3.6/quill.snow.css")

block content
  h1 Bài đăng
  form
    label(for="post") Tiêu đề : &nbsp;
    input#post-title.form-control(name="post-title", placeholder="Tiêu đề bài viết...")
    #editor
    label Thể  loại
    select#categories.form-control
    label
    button#add-post Thêm bài viết

block append script
  script(src="/public/js/quill.js")
  script(src="/public/js/post.js")
