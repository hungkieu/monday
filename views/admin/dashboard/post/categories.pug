extend ../../../layouts/dashboard.pug
block content
  #content
    h1 Thể  loại
    input(type="hidden", name="_csrf", value=csrfToken)
    .add-category#add-category
      form
        label(for="category") Thêm thể loại &nbsp;
        input(
          type="text",
          name="category",
          v-model="addText",
          v-on:keypress.13.prevent="addCategory"
        )
    hr
    #list-category
      span Tìm kiếm
      input(type="text", v-model="searchText")
      ul
        li(v-for="item in searchResult") {{ item.title }}&nbsp;
          button(v-on:click="clickDelete(item._id)") Xóa
block append script
  script(src="/public/js/categories.js")
